<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/form_background_color">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/theme_color">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="horizontal">
            <ImageButton android:id="@+id/cmdBack" android:background="@color/pageHeadingBack" android:src="@drawable/back" android:layout_width="50sp" android:layout_height="match_parent"/>
            <TextView android:id="@+id/lblHeading" android:text="Trphoid Extra Master"  android:paddingLeft="10sp" android:layout_width="wrap_content" android:layout_height="match_parent" android:gravity="center_vertical" android:textSize="20sp" android:textColor="@color/pageHeading"/>
            <TextView android:id="@+id/txtTotal" android:gravity="right" android:paddingRight="30sp" android:text="Total No:" android:layout_width="match_parent" android:layout_height="wrap_content" android:textSize="20sp" android:textColor="#ffffff" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout  android:layout_marginTop="0sp" android:layout_width="fill_parent" android:gravity="start" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowHeading">
        <TextView
            android:text="Upazila/Thana"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/tvUpazila"
            android:paddingLeft="10sp"/>

        <Spinner
            android:id="@+id/spnUpazila"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"
            android:textSize="20sp" />
    </LinearLayout>
    <View android:id="@+id/lineUpazila" android:layout_height="1dip" android:layout_width="fill_parent" android:background="#CCCCCC" />

    <LinearLayout  android:layout_marginTop="0sp" android:layout_width="fill_parent" android:gravity="start" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowHeading">
        <TextView
            android:text="Union/Ward"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/tvUnion"
            android:paddingLeft="10sp"/>

        <Spinner
            android:id="@+id/spnUnion"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"
            android:textSize="20sp" />
    </LinearLayout>
    <View android:id="@+id/lineUnion" android:layout_height="1dip" android:layout_width="fill_parent" android:background="#CCCCCC" />

    <LinearLayout  android:layout_marginTop="0sp" android:layout_width="fill_parent" android:gravity="start" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowHeading">
        <TextView
            android:text="Village/Moholla"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/tvMoholla"
            android:paddingLeft="10sp"/>

        <Spinner
            android:id="@+id/spnMoholla"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"
            android:textSize="20sp" />
    </LinearLayout>
    <View android:id="@+id/lineMoholla" android:layout_height="1dip" android:layout_width="fill_parent" android:background="#CCCCCC" />

    <LinearLayout  android:layout_marginTop="0sp" android:layout_width="fill_parent" android:gravity="start" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowHeading">
        <TextView
            android:text="Cluster"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/tvCluster"
            android:paddingLeft="10sp"/>

        <Spinner
            android:id="@+id/spnCluster"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"
            android:textSize="20sp" />
    </LinearLayout>
    <View android:id="@+id/lineCluster" android:layout_height="1dip" android:layout_width="fill_parent" android:background="#CCCCCC" />

    <LinearLayout  android:layout_marginTop="0sp" android:layout_width="fill_parent" android:gravity="start" android:layout_height="wrap_content" android:orientation="horizontal" style="@style/rowHeading">
        <TextView
            android:text="Structure No"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/tvStructureNo"
            android:paddingLeft="10sp"/>

        <Spinner
            android:id="@+id/spnStructureNo"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"
            android:textSize="20sp" />
    </LinearLayout>
    <View android:id="@+id/lineStructure" android:layout_height="1dip" android:layout_width="fill_parent" android:background="#CCCCCC" />



    <LinearLayout  android:background="#F3F3F3" android:paddingTop="5sp" android:layout_width="fill_parent" android:gravity="end" android:layout_height="wrap_content" android:orientation="horizontal">
        <EditText
            android:id="@+id/txtSearch" android:gravity="left"
            style="@style/icddrb_search_edittext"
            android:layout_width="300dp" android:layout_toRightOf="@+id/spnSearch"
            android:layout_height="40dp" android:layout_marginBottom="10dp"
            android:inputType="textCapCharacters" android:hint="UNCODE, STRUCTURENO, HOUSEHOLDSL, VISITNO, MEMSL"
            android:maxLength="100" android:layout_marginRight="30dp"
            android:textSize="18sp" android:padding="10dp" android:layout_marginTop="10dp"/>
        <Button android:id="@+id/btnRefresh" android:textAllCaps="false" android:background="@drawable/button_style_circle_line" android:textSize="18sp" android:textColor="@color/theme_color"
            android:layout_width="wrap_content" android:layout_height="30sp" android:layout_marginTop="5dip" android:layout_marginBottom="10sp" android:text=" Refresh " android:paddingLeft="5sp" android:paddingRight="5sp"/>
        <Button android:id="@+id/btnAdd" android:textAllCaps="false" android:layout_marginLeft="20sp" android:layout_marginRight="20sp"  android:textSize="18sp" android:textColor="@color/theme_color"
            android:background="@drawable/button_style_circle_line" android:layout_width="wrap_content" android:layout_height="30sp" android:layout_marginTop="5dip" android:layout_marginBottom="10sp" android:text=" + New " android:paddingLeft="5sp" android:paddingRight="5sp"/>
    </LinearLayout>
    <View android:layout_height="1dip" android:layout_width="fill_parent" android:layout_marginBottom="0sp" android:background="#CCCCCC" />
       <FrameLayout android:layout_width="match_parent" android:layout_weight="1" android:layout_height="0dp">
             <android.support.v7.widget.RecyclerView
                  android:id="@+id/recycler_view"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent" android:layout_marginBottom="20dp"
                  android:scrollbars="vertical"/>
       </FrameLayout>
</LinearLayout>