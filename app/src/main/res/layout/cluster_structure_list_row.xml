<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:scrollbars="vertical">


<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="2"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10sp">

    <LinearLayout
        android:id="@+id/secListRow"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <!--android:paddingTop="12sp"-->
        <!--android:paddingBottom="12sp"-->
        <!--<TextView android:id="@+id/Division" android:layout_width="50dp" android:gravity="center" android:layout_height="wrap_content"/>-->
        <!--<TextView android:id="@+id/DivName" android:layout_width="50dp" android:gravity="center" android:layout_height="wrap_content"/>-->
        <!--<TextView android:id="@+id/Zila" android:layout_width="50dp" android:gravity="center" android:layout_height="wrap_content"/>-->
        <!--<TextView android:id="@+id/ZilaName" android:layout_width="50dp" android:gravity="center" android:layout_height="wrap_content"/>-->
        <!--<TextView android:id="@+id/Upazila" android:layout_width="50dp" android:gravity="center" android:layout_height="wrap_content"/>-->
        <!--<TextView android:id="@+id/UpName" android:layout_width="50dp" android:gravity="center" android:layout_height="wrap_content"/>-->
        <!--<TextView android:id="@+id/UNCode" android:layout_width="50dp" android:gravity="center" android:layout_height="wrap_content"/>-->
        <!--<TextView android:id="@+id/Uname" android:layout_width="50dp" android:gravity="center" android:layout_height="wrap_content"/>-->
        <!--<TextView android:id="@+id/Cluster" android:layout_width="50dp" android:gravity="center" android:layout_height="wrap_content"/>-->
        <TextView
            android:id="@+id/SlNo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|top"

            android:text="1 " />
        <TextView
            android:id="@+id/StructureNoHeading"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|top"
            android:text="Structure No: " />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/StructureNo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/Heading"
            android:gravity="center"
            android:text="08517" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/RoadHeading"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|top"
            android:text="Road No: " />
        <TextView
            android:id="@+id/txtRoad"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|top"
            android:text="4  " />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/HoldingHeading"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|top"
            android:text="Hold. No : " />
        <TextView
            android:id="@+id/txtHolding"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|top"
            android:text="324/D/1" />


    </LinearLayout>


</LinearLayout>


<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="3"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/OwnerNameHeading"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|top"
            android:text="Owner Name: " />

        <TextView
            android:id="@+id/txtOwnerName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|top"
            android:textColor="@color/Heading"
            android:text="Md. Mohor Ali" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|top"
            android:text="342/4/1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/LastVisitNoHeading"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Last Visit No: " />

        <TextView
            android:id="@+id/LastVisitNo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/Heading"
            android:text="1" />
    </LinearLayout>

</LinearLayout>


<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="2"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">

    <Button
        android:id="@+id/btnVisit"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="10sp"
        android:layout_gravity="center"
        android:layout_marginTop="5dip"
        android:background="@drawable/button_style_circle_line"
        android:paddingLeft="5sp"
        android:paddingRight="5sp"
        android:text="Visit"
        android:textAllCaps="false"
        android:textColor="@color/theme_color"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnHHInterview"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="10sp"
        android:layout_gravity="center"
        android:layout_marginTop="5dip"
        android:background="@drawable/button_style_circle_red"
        android:paddingLeft="5sp"
        android:paddingRight="5sp"
        android:text="HH Interview"
        android:textAllCaps="false"
        android:textColor="@color/color_white"
        android:textSize="14sp" />

</LinearLayout>


</LinearLayout>


